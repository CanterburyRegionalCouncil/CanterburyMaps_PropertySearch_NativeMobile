<!DOCTYPE html>

<html ng-app="app" ng-controller="AppController as app">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width" />
    <title>Property Search</title>
    @Styles.Render("~/content/css")
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    @Styles.Render("https://js.arcgis.com/4.0/esri/css/main.css")
    <script src="https://use.fontawesome.com/2ec24b1f9f.js"></script>
</head>
<body id="page-{{app.$state.current.name}}">
    <div style="height: 100%">
        <div ui-view style="height: 100%"></div>
    </div>

    <!-- Scripts -->
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/libs")
    @Scripts.Render(
        "//js.arcgis.com/4.0/",
        "//unpkg.com/angular-esri-map@2"
    )
    @Scripts.Render("~/bundles/app")
</body>

</html>